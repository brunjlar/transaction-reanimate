library
  hs-source-dirs:      src
  exposed-modules:     Core
                     , AnimationM
                     , Oracle
                     , TokenSale
                     , Transaction
  build-depends:       base >=4.14 && <4.15
                     , containers
                     , linear
                     , mtl
                     , optics
                     , optics-extra
                     , reanimate ==1.1.4.0
                     , reanimate-svg
                     , text
  default-language:    Haskell2010
  ghc-options:         -Wall

executable oracle
  hs-source-dirs:      app
  main-is:             oracle.hs
  build-depends:       base >= 4.14 && <4.15
                     , transaction-reanimate
  ghc-options:         -Wall -O2
  default-language:    Haskell2010

executable tokensale
  hs-source-dirs:      app
  main-is:             tokensale.hs
  build-depends:       base >= 4.14 && <4.15
                     , transaction-reanimate
  ghc-options:         -Wall -O2
  default-language:    Haskell2010

executable transactions
  hs-source-dirs:      app
  main-is:             transactions.hs
  build-depends:       base >= 4.14 && <4.15
                     , transaction-reanimate
  ghc-options:         -Wall -O2
  default-language:    Haskell2010
